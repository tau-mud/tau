  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Portal",
      "skipFiles": ["<node_internals>/**"],
      "program": "./node_modules/moleculer/bin/moleculer-runner",
      "args": [
        "--hot",
        "--repl",
        "-c",
        "packages/example/lib/portal.config.js"
      ],
      "outFiles": ["${workspaceFolder}/**/*.js"]
    }
  ]
}
